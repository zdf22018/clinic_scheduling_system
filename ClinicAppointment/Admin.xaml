        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="84.802,248,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label x:Name="label4" Content="End time" HorizontalAlignment="Left" Margin="19.802,310,0,0" VerticalAlignment="Top" Grid.Column="1"/>
