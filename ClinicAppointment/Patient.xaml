        <Label x:Name="label3" Content="Check Availability" HorizontalAlignment="Left" Margin="203,213,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button6" Content="Book" HorizontalAlignment="Left" Margin="207,423,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
