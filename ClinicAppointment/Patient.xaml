        <Label x:Name="label1" Content="Doctor" HorizontalAlignment="Left" Margin="126,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="text" HorizontalAlignment="Left" Height="23" Margin="203,130,0,0" TextWrapping="Wrap" Text="Enter doctor Name" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label2" Content="Date" HorizontalAlignment="Left" Margin="203,158,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="203,184,0,0" VerticalAlignment="Top"/>
